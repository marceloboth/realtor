<div class="group relative flex flex-col overflow-hidden rounded-lg border border-gray-200 bg-white">
  <div class="aspect-w-3 aspect-h-4 bg-gray-200 group-hover:opacity-75 sm:aspect-none sm:h-96">
    <img src="<%= @house.image %>" alt="Image of a house" class="h-full w-full object-cover object-center sm:h-full sm:w-full">
  </div>
  <div class="flex flex-1 flex-col space-y-2 p-4">
    <h3 class="text-sm font-medium text-gray-900">
      <%= link_to @house.origin_url, target: '_blank' do %>
        <span aria-hidden="true" class="absolute inset-0"></span>
        <%= @house.address %>
      <% end %>
    </h3>
    <p class="text-sm text-gray-500">House has: <%= @house.bedrooms %> bedrooms and <%= @house.bathrooms %> bathrooms</p>
    <div class="flex flex-1 flex-col justify-end">
      <p class="text-sm italic text-gray-500"></p>
      <p class="text-base font-medium text-gray-900"><%= @house.price %></p>
    </div>
  </div>
</div>

